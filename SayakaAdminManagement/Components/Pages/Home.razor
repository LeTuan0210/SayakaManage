@page "/"
@inject SeedData _seedService

<PageTitle>Home</PageTitle>

<InputFile OnChange="SeedDataAsync" />

@code{
    async Task SeedDataAsync(InputFileChangeEventArgs e)
    {
        await _seedService.SeedRestaurants(e.File);
        await _seedService.SeedPromotion(e.File);
        await _seedService.SeedMenu(e.File);
    }
}
