@page "/member-detail"
<PageTitle>Sayaka Membership</PageTitle>
@if(member != null)
{
    <div class="container my-5">
        <div class="headerApp d-flex flex-column justify-content-center align-items-center gap-3">
            <div class="imageCustomer">
                <img style="border-radius: 50%" src=@(!string.IsNullOrEmpty(member.memberAvatar) ? member.memberAvatar : "./image/user-icon.webp") alt="">
            </div>
            <h1 class="nameUser">@member.memberName</h1>
        </div>
    </div>
    <div class="container">
        <p>
            @failInfomation
        </p>
        <EditForm Model="member" class="d-flex flex-column gap-3" OnValidSubmit="SubmitForm">
            <DataAnnotationsValidator />
            <div class="form-group">
                <label class="labelForm" for="exampleInputName">Họ và tên</label>
                <InputText @bind-Value="member.memberName" class="form-control" id="exampleInputName" aria-describedby="emailHelp" placeholder="Demo user" />
            </div>
            <div class="form-group">
                <label class="labelForm" for="exampleInputDate">Ngày sinh</label>
                <InputDate @bind-Value="member.memberBirthday" class="form-control" id="exampleInputDate" placeholder="Sinh nhật của bạn" />
            </div>
            <div class="form-group">
                <label class="labelForm" for="exampleInputPhone">Điện thoại</label>
                <InputText @bind-Value="member.memberPhone" class="form-control" id="exampleInputPhone" placeholder="Số điện thoại" />
            </div>
            <div class="form-group">
                <label class="labelForm" for="exampleInputEmail">Email</label>
                <InputText @bind-Value="member.memberEmail" class="form-control" id="exampleInputEmail" placeholder="user@gmail.com" />
            </div>
            <button type="submit" class="btn btn-primary">Cập nhật</button>
        </EditForm>
    </div>
}
else
{
    <div class="container">
        <h3>Chưa có thông tin thành viên. Vui lòng liên hệ nhà hàng để được hỗ trợ</h3>
    </div>
}